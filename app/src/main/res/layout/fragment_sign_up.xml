<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Nombre"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etName"
            app:layout_constraintBottom_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etName" />

        <EditText
            android:id="@+id/etSurname1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Apellido Paterno"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvSurname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Paterno:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etSurname1"
            app:layout_constraintBottom_toBottomOf="@id/etSurname1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etSurname1" />

        <EditText
            android:id="@+id/etSurname2"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Apellido Paterno"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etSurname1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvSurname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Materno:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etSurname2"
            app:layout_constraintBottom_toBottomOf="@id/etSurname2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etSurname2" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Email"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etSurname2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etEmail"
            app:layout_constraintBottom_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etEmail" />

        <Spinner
            android:id="@+id/spinnerProfession"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="@id/etProfession"
            app:layout_constraintBottom_toBottomOf="@id/etProfession"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etProfession"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Profesión"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvProfession"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/etProfession"
            app:layout_constraintBottom_toBottomOf="@id/etProfession"
            app:layout_constraintEnd_toEndOf="@id/etProfession"
            app:layout_constraintStart_toStartOf="@id/etProfession">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chevron_down"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesión:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etProfession"
            app:layout_constraintBottom_toBottomOf="@id/etProfession"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etProfession" />

        <EditText
            android:id="@+id/etCodeProfession"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Cedula Profesional"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etProfession"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:maxLength="10"/>

        <TextView
            android:id="@+id/tvCodeProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ced. Prof.:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etCodeProfession"
            app:layout_constraintBottom_toBottomOf="@id/etCodeProfession"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etCodeProfession" />

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="@id/etCountry"
            app:layout_constraintBottom_toBottomOf="@id/etCountry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etCountry"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="País"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etCodeProfession"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvCountry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/etCountry"
            app:layout_constraintBottom_toBottomOf="@id/etCountry"
            app:layout_constraintEnd_toEndOf="@id/etCountry"
            app:layout_constraintStart_toStartOf="@id/etCountry">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chevron_down"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="País:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etCountry"
            app:layout_constraintBottom_toBottomOf="@id/etCountry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etCountry" />

        <Spinner
            android:id="@+id/spinnerState"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="@id/etState"
            app:layout_constraintBottom_toBottomOf="@id/etState"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etState"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Estado"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etCountry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvState"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/etState"
            app:layout_constraintBottom_toBottomOf="@id/etState"
            app:layout_constraintEnd_toEndOf="@id/etState"
            app:layout_constraintStart_toStartOf="@id/etState">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chevron_down"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etState"
            app:layout_constraintBottom_toBottomOf="@id/etState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etState" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="Teléfono"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@id/etState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLength="10"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/etPhone"
            app:layout_constraintBottom_toBottomOf="@id/etPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etPhone" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:padding="10dp"
            app:backgroundTint="#007AFF"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>